<Page x:Class="Fabrino.Views.AdminDashBoard.ADashBoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d"
      Title="ADashboardPage"
      Background="#FFEFEF"
      FlowDirection="RightToLeft">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <!-- 1. لیست کاربران با نقش -->
            <TextBlock Text="👥 لیست کاربران" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" />
            <DataGrid x:Name="UserGrid" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,30">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="نام کامل" Binding="{Binding full_name}" Width="*"/>
                    <DataGridTextColumn Header="نقش" Binding="{Binding role}" Width="100"/>
                    <DataGridTextColumn Header="آخرین ورود" Binding="{Binding last_login}" Width="150"/>
                    <DataGridTemplateColumn Header="عملیات" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="تغییر نقش" Width="70" Margin="2"/>
                                    <Button Content="❌" Width="30" Margin="2" Background="Red" Foreground="White" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- 4. لاگ سیستم -->
            <TextBlock Text="📃 لاگ سیستم" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" />
            <ListBox x:Name="SystemLogsBox" Height="150" Background="White" BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,30"/>

            <!-- 6. نمودار نقش کاربران -->
            <TextBlock Text="🌐 توزیع نقش کاربران" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- در بخش نمودار دایره‌ای، این کد را جایگزین کنید: -->
                <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="10" Margin="0,0,10,0">
                    <lvc:PieChart x:Name="RoleDistributionChart" Series="{Binding RoleDistributionSeries}" LegendLocation="Bottom">
                        <lvc:PieChart.ChartLegend>
                            <lvc:DefaultLegend FontSize="14"/>
                        </lvc:PieChart.ChartLegend>
                    </lvc:PieChart>
                </Border>

                <!-- در بخش آمار عددی، این کد را جایگزین کنید: -->
                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,0">
                    <ItemsControl ItemsSource="{Binding RoleDistributionSeries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title, StringFormat={}{0}: {Values[0]} نفر}" 
                           Margin="5" FontSize="14"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
