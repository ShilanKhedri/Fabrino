<Page x:Class="Fabrino.Views.AdminDashBoard.SupportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="صفحه پشتیبانی" Background="#FFEFEF"
      FlowDirection="RightToLeft">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="📨 تیکت‌های پشتیبانی" FontSize="24" FontWeight="Bold"
                   Margin="0,0,0,20" Grid.Row="0"/>

        <DataGrid x:Name="TicketsDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="کد تیکت" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="کاربر" Binding="{Binding Username}" Width="120"/>
                <DataGridTextColumn Header="موضوع" Binding="{Binding Subject}" Width="*"/>
                <DataGridTextColumn Header="وضعیت" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="تاریخ ثبت" Binding="{Binding CreatedAt}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Vertical">
            <TextBlock Text="پاسخ:" Margin="0,0,0,5"/>
            <TextBox x:Name="ResponseTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
            <Button Content="ثبت پاسخ" Click="SubmitResponse_Click"
                    Width="120" Height="35" Background="#4CAF50"
                    Foreground="White" FontWeight="Bold" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
