<Window x:Class="Fabrino.Views.DashBoard.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:Fabrino.Views.DashBoard"
mc:Ignorable="d"
Title="داشبورد صاحب"
WindowStartupLocation="CenterScreen"
WindowState="Maximized"
Height="600" Width="1000"
Background="#FFEFEF"
FlowDirection="RightToLeft"
UseLayoutRounding="True"
SnapsToDevicePixels="True">
    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F1F1F1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="0"
                             CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F48672"/>
                </Trigger>
            </Style.Triggers>

        </Style>
        <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="#DADADA"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="257*"/>
        </Grid.RowDefinitions>
        <DockPanel HorizontalAlignment="Left" Height="584" LastChildFill="False" VerticalAlignment="Top" Width="156" Grid.RowSpan="2">
            <StackPanel Grid.Row="0" Margin="10">
                <!-- پروفایل کاربر -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                    <Ellipse Width="50" Height="50">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="Assets/user.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="علی احمدی" Foreground="White" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="صاحب" Foreground="White" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- دکمه‌های منو -->
                <Button Style="{StaticResource ActiveMenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/dashboard.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="داشبورد" VerticalAlignment="Center"/>
                    </StackPanel>

                </Button>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/290137_clipboard_document_file_list_report_icon.png" Width="28" Height="30" Margin="0,0,5,0"/>
                        <TextBlock Text="گزارش" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/checklists.png" Width="39" Height="45" Margin="0,0,5,0"/>
                        <TextBlock Text="موجودی" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}" >
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/cart.png" Width="31" Height="29" Margin="0,0,5,0"/>
                        <TextBlock Text="خرید" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/2849830_multimedia_options_setting_settings_gear_icon.png" Width="33" Height="27" Margin="0,0,5,0"/>
                        <TextBlock Text="تنظیمات" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </DockPanel>
        <!-- Header -->
        <DockPanel Margin="156,10,10,0" VerticalAlignment="Top">
            <TextBox Text="جستجو..." Width="150" HorizontalAlignment="Left" DockPanel.Dock="Right" 
             Margin="0,0,10,0" Padding="5" BorderBrush="#CCC" BorderThickness="1" Background="White"/>
            <TextBlock Text="خوش آمدید " FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Foreground="#F48672"/>
        </DockPanel>

    </Grid>
</Window>
