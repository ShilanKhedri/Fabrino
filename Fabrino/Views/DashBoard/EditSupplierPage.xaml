<Page x:Class="Fabrino.Views.DashBoard.EditSupplierPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ویرایش تامین‌کننده"
      FlowDirection="RightToLeft"
      Background="White"
      Height="450" Width="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- عنوان صفحه -->
        <TextBlock Text="ویرایش تامین‌کننده" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- فرم ویرایش -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- نام تامین‌کننده -->
            <Label Content="نام تامین‌کننده:" 
                   Grid.Row="0" Grid.Column="0"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,10"/>
            <TextBox x:Name="NameTextBox" 
                     Grid.Row="0" Grid.Column="1"
                     Margin="0,0,0,10"
                     FontSize="14" MaxLength="20"/>

            <!-- شخص رابط -->
            <Label Content="شخص رابط:" 
                   Grid.Row="1" Grid.Column="0"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,10"/>
            <TextBox x:Name="ContactPersonTextBox" 
                     Grid.Row="1" Grid.Column="1"
                     Margin="0,0,0,10"
                     FontSize="14" MaxLength="11"/>

            <!-- شماره تماس -->
            <Label Content="شماره تماس:" 
                   Grid.Row="2" Grid.Column="0"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,10"/>
            <TextBox x:Name="PhoneTextBox" 
                     Grid.Row="2" Grid.Column="1"
                     Margin="0,0,0,10"
                     FontSize="14"/>

            <!-- ایمیل -->
            <Label Content="ایمیل:" 
                   Grid.Row="3" Grid.Column="0"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,10"/>
            <TextBox x:Name="EmailTextBox" 
                     Grid.Row="3" Grid.Column="1"
                     Margin="0,0,0,10"
                     FontSize="14" MaxLength="20"/>

            <!-- آدرس -->
            <Label Content="آدرس:" 
                   Grid.Row="4" Grid.Column="0"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,10"/>
            <TextBox x:Name="AddressTextBox" 
                     Grid.Row="4" Grid.Column="1"
                     Margin="0,0,0,10"
                     Height="60" 
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     FontSize="14" MaxLength="50"/>

            <!-- شماره مالیاتی -->
            <Label Content="شماره مالیاتی:" 
                   Grid.Row="5" Grid.Column="0"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,10"/>
            <TextBox x:Name="TaxNumberTextBox" 
                     Grid.Row="5" Grid.Column="1"
                     Margin="0,0,0,10"
                     FontSize="14" MaxLength="20"/>
        </Grid>

        <!-- دکمه‌های عملیات -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="SaveButton"
                    Content="ذخیره تغییرات" 
                    Width="150"
                    Margin="0,0,10,0"
                    Padding="10,5"
                    Background="#4CAF50"
                    Foreground="White"
                    FontSize="14"
                    Click="SaveButton_Click"/>

            <Button x:Name="CancelButton"
                    Content="انصراف" 
                    Width="100"
                    Padding="10,5"
                    Background="#F44336"
                    Foreground="White"
                    FontSize="14"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Page>