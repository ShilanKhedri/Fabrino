<Page x:Class="Fabrino.Views.DashBoard.EditSupplierPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ویرایش تامین‌کننده"
      FlowDirection="RightToLeft"
      Background="White">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ویرایش تامین‌کننده" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="نام تامین‌کننده:"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <Label Content="شماره تماس:"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,10"/>

            <Label Content="ایمیل:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>

            <Label Content="آدرس:"/>
            <TextBox x:Name="AddressTextBox" Height="60" TextWrapping="Wrap"/>

            <Button Content="ذخیره تغییرات" 
                    HorizontalAlignment="Left" 
                    Margin="0,20,0,0"
                    Padding="15,5"
                    Background="#4CAF50"
                    Foreground="White"
                    />
        </StackPanel>
    </Grid>
</Page>