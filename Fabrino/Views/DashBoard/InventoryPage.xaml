<Page x:Class="Fabrino.Views.DashBoard.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="موجودی انبار" 
      Background="#FFEFEF"
      FlowDirection="RightToLeft">

    <Page.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F1F1F1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F48672"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WatermarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
                            <TextBlock x:Name="watermarkText" 
                                       Text="{TemplateBinding Tag}"
                                       Foreground="LightGray"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="watermarkText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="watermarkText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SummaryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#888888" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- عنوان -->
        <TextBlock Grid.Row="0" Text="📦 موجودی انبار" 
                   FontSize="26" FontWeight="Bold"
                   Margin="30,20,30,20" HorizontalAlignment="Right"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,0,30,30">

                <!-- کارت‌های خلاصه -->
                <UniformGrid Columns="3" HorizontalAlignment="Right">
                    <Border Style="{StaticResource SummaryCardStyle}">
                        <StackPanel>
                            <TextBlock Text="کل کالاها" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="TotalItemsText" Text="-" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource SummaryCardStyle}">
                        <StackPanel>
                            <TextBlock Text="کمترین موجودی" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="MinStockText" Text="-" FontSize="16"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource SummaryCardStyle}">
                        <StackPanel>
                            <TextBlock Text="بیشترین موجودی" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="MaxStockText" Text="-" FontSize="16"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- فیلتر و فرم -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- فیلتر جستجو -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="SearchBox" Width="200" Height="30" Margin="5"
                                 Style="{StaticResource WatermarkTextBoxStyle}" Tag="جستجوی کالا..."/>
                        <Button Content="اعمال فیلتر" Width="100" Height="30" Margin="5"
                                Click="ApplyFilter_Click"
                                Style="{StaticResource MenuButtonStyle}"/>
                    </StackPanel>

                    <!-- جدول -->
                    <DataGrid x:Name="InventoryGrid" Grid.Column="0" Grid.Row="1"
                              AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                              Margin="0,10,10,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="نام کالا" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="تعداد موجودی" Binding="{Binding Quantity}" Width="*"/>
                            <DataGridTextColumn Header="قیمت هر متر" Binding="{Binding PricePerMeter}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- فرم افزودن کالا -->
                    <Border Grid.Column="1"  CornerRadius="10" Padding="15" Margin="10">
                        <StackPanel>
                            <TextBlock Text="➕ افزودن کالا" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>

                            <TextBox x:Name="ItemNameBox" Height="20" Margin="0,0,0,5"
                 Style="{StaticResource WatermarkTextBoxStyle}" Tag="نام کالا"/>

                            <TextBox x:Name="ItemColorBox" Height="20" Margin="0,0,0,5"
                 Style="{StaticResource WatermarkTextBoxStyle}" Tag="رنگ"/>

                            <TextBox x:Name="ItemMaterialBox" Height="20" Margin="0,0,0,5"
                 Style="{StaticResource WatermarkTextBoxStyle}" Tag="جنس"/>

                            <TextBox x:Name="ItemWidthBox" Height="20" Margin="0,0,0,5"
                 Style="{StaticResource WatermarkTextBoxStyle}" Tag="عرض (سانتی‌متر)"/>

                            <TextBox x:Name="ItemQuantityBox" Height="20" Margin="0,0,0,5"
                 Style="{StaticResource WatermarkTextBoxStyle}" Tag="تعداد"/>

                            <TextBox x:Name="ItemPriceBox" Height="20" Margin="0,0,0,5"
                 Style="{StaticResource WatermarkTextBoxStyle}" Tag="قیمت واحد (تومان)"/>

                            <ComboBox x:Name="SupplierComboBox" Height="20" Margin="0,0,0,5"
                  Tag="تأمین‌کننده">
                                <ComboBoxItem Content="تأمین‌کننده ۱" Tag="1"/>
                                <ComboBoxItem Content="تأمین‌کننده ۲" Tag="2"/>
                            </ComboBox>

                            <Button Content="افزودن" Height="35" Background="#59A5F7" Foreground="White" 
                FontWeight="Bold" Click="AddItem_Click"
                Style="{StaticResource MenuButtonStyle}"/>
                        </StackPanel>
                    </Border>

                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
