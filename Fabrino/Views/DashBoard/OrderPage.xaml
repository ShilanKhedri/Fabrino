<Page x:Class="Fabrino.Views.DashBoard.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="OrderPage"
      FlowDirection="RightToLeft">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- محتوای جدید: فرم ثبت سفارش -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- عنوان صفحه -->
            <TextBlock Grid.Row="0" 
                       Text="ثبت سفارش جدید" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Right"/>

            <!-- فرم ثبت سفارش -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- اطلاعات سفارش (سمت راست) -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="اطلاعات سفارش" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" TextAlignment="Right"/>

                    <!-- فیلدهای ورودی -->
                    <Label Content="کالا:"/>
                    <ComboBox x:Name="ProductComboBox" SelectionChanged="ProductComboBox_SelectionChanged"
          FontSize="14" Margin="0,0,0,10" Height="30">
                        <ComboBoxItem Content="کالا A"/>
                        <ComboBoxItem Content="کالا B"/>
                        <ComboBoxItem Content="➕ افزودن کالای جدید" Tag="add"/>
                    </ComboBox>

                    <Label Content="تعداد:"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="QuantityBox" Width="60" Text="1" FontSize="14" VerticalContentAlignment="Center"/>
                        <StackPanel>
                            <Button Content="▲" Click="IncreaseQuantity_Click" Padding="0" Height="18"/>
                            <Button Content="▼" Click="DecreaseQuantity_Click" Padding="0" Height="18"/>
                        </StackPanel>
                    </StackPanel>

                    <Label Content=":قیمت واحد" HorizontalContentAlignment="Right"/>
                    <TextBox x:Name="UnitPrice" FontSize="14" Margin="0,0,0,10" Height="30"/>

                    <Label Content=":تاریخ تحویل" HorizontalAlignment="Right"/>
                    <DatePicker x:Name="DeliveryDate" FontSize="14" Margin="0,0,0,10" Height="30"/>
                </StackPanel>

                <!-- اطلاعات تامین‌کننده (سمت چپ) -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="اطلاعات تامین‌کننده" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" TextAlignment="Right"/>

                    <!-- فیلدهای ورودی -->
                    <Label Content="نام تامین‌کننده:"/>
                    <ComboBox x:Name="SupplierName" SelectionChanged="SupplierName_SelectionChanged"
          FontSize="14" Margin="0,0,0,10" Height="30">
                        <ComboBoxItem Content="تامین‌کننده X"/>
                        <ComboBoxItem Content="تامین‌کننده Y"/>
                        <ComboBoxItem Content="➕ افزودن تامین‌کننده جدید" Tag="add"/>
                    </ComboBox>
                    <Label Content="شماره تماس:"/>
                    <TextBox x:Name="SupplierPhone" FontSize="14" Margin="0,0,0,10" Height="30"/>

                    <Label Content=":آدرس" HorizontalAlignment="Right"/>
                    <TextBox x:Name="SupplierAddress" FontSize="14" Margin="0,0,0,10" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>
            </Grid>

            <!-- دکمه ثبت سفارش -->
            <Button Grid.Row="1" 
                    Content="ثبت سفارش" 
                    VerticalAlignment="Top"
                    Width="150" 
                    Height="40"
                    Margin="305,384,305,0"
                    Background="#F48672"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Click="SubmitOrder_Click"/>
        </Grid>
    </Grid>
</Page>