<Window x:Class="Fabrino.Views.DashBoard.OwnerDashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fabrino.Views.DashBoard"
        mc:Ignorable="d"
        Title="داشبورد صاحب"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Height="600" Width="1000"
        Background="#FFEFEF"
        FlowDirection="RightToLeft"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">


    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F1F1F1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F48672"/>
                </Trigger>
            </Style.Triggers>
            
        </Style>
        <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="#DADADA"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Grid.Column="0" Background="#F48672" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- محتوای منو -->
                <RowDefinition Height="Auto"/>
                <!-- دکمه خروج -->
            </Grid.RowDefinitions>

            <!-- بخش بالا: عکس کاربر و دکمه‌ها -->
            <StackPanel Grid.Row="0" Margin="10">
                <!-- پروفایل کاربر -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                    <Ellipse Width="50" Height="50">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="Assets/user.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="علی احمدی" Foreground="White" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="صاحب" Foreground="White" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- دکمه‌های منو -->
                <Button Style="{StaticResource ActiveMenuButtonStyle}" Click="Button_Click_1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/dashboard.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="داشبورد" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/290137_clipboard_document_file_list_report_icon.png" Width="28" Height="30" Margin="0,0,5,0"/>
                        <TextBlock Text="گزارش" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/checklists.png" Width="39" Height="45" Margin="0,0,5,0"/>
                        <TextBlock Text="موجودی" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}" Click="Button_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/cart.png" Width="31" Height="29" Margin="0,0,5,0"/>
                        <TextBlock Text="خرید" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/2849830_multimedia_options_setting_settings_gear_icon.png" Width="33" Height="27" Margin="0,0,5,0"/>
                        <TextBlock Text="تنظیمات" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- بخش پایین: خروج -->
            <StackPanel Grid.Row="1" Margin="10">
                <Button Content="خروج" Style="{StaticResource MenuButtonStyle}" Foreground="White" Background="#D94C32" Click="Button_Click_1"/>
            </StackPanel>
        </Grid>

        <!-- Main Area -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Margin="10" VerticalAlignment="Top">
                <TextBox Text="جستجو..." Width="150" HorizontalAlignment="Left" DockPanel.Dock="Right" LostFocus="AddText" GotFocus="RemoveText"
                         Margin="0,0,10,0" Padding="5" BorderBrush="#CCC" BorderThickness="1" Background="White"/>
                <TextBlock Text="خوش آمدید " FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Foreground="#F48672"/>
            </DockPanel>

            <!-- Dashboard Content -->
            <ScrollViewer Grid.Row="1">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        
                        <RowDefinition Height="*"/>
                        
                        <RowDefinition Height="Auto"/>
                        
                    </Grid.RowDefinitions>

                    
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Product -->
                        <Border Grid.Column="0" Background="White" Margin="10"
                    CornerRadius="15" Padding="20" BorderBrush="#DDD" BorderThickness="1" Height="150">
                            <StackPanel>
                                <TextBlock Text="۳۴۵" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="تعداد محصولات" FontSize="16" Foreground="#666" HorizontalAlignment="Center"/>
                                <Image Source="Assets/box.png" Width="68" Height="61" HorizontalAlignment="Left" Margin="0,-90,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Order -->
                        <Border Grid.Column="1" Background="White" Margin="10"
                    CornerRadius="15" Padding="20" BorderBrush="#DDD" BorderThickness="1" Height="150">
                            <StackPanel>
                                <TextBlock Text="۴۳۶۵" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="کل سفارش‌ها" FontSize="16" Foreground="#666" HorizontalAlignment="Center"/>
                                <Image Source="Assets/shopping-cart.png" Width="68" Height="61" HorizontalAlignment="Left" Margin="0,-90,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Out of Stock -->
                        <Border Grid.Column="2" Background="White" Margin="10"
                    CornerRadius="15" Padding="20" BorderBrush="#DDD" BorderThickness="1" Height="150">
                            <StackPanel>
                                <TextBlock Text="۲۷" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="اتمام موجودی" FontSize="16" Foreground="#666" HorizontalAlignment="Center"/>
                                <Image Source="Assets/out-of-stock.png" Width="68" Height="67" HorizontalAlignment="Left" Margin="0,-90,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Row 1: نمودار و مشتریان -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- نمودار -->
                        <Border Grid.Column="0" Background="White" Margin="10"
                    CornerRadius="15" Padding="20" BorderBrush="#DDD" BorderThickness="1" Height="300">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="[نمودار دایره‌ای]" FontSize="20" Foreground="#AAA" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Customers -->
                        <Border Grid.Column="1" Background="White" Margin="10"
                    CornerRadius="15" Padding="20" BorderBrush="#DDD" BorderThickness="1" Height="300">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="۵۶۷K" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="تعداد مشتریان" FontSize="16" Foreground="#666" HorizontalAlignment="Center"/>
                                <Image Source="Assets/customer.png" Width="60" Height="50" HorizontalAlignment="Left" Margin="0,-90,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Row 2: نوار وضعیت -->
                    <Border Grid.Row="2" Background="#FFF8E1" BorderBrush="#FFECB3" BorderThickness="1"
                CornerRadius="10" Margin="10" Padding="15">
                        <TextBlock Text="سیستم با موفقیت به‌روزرسانی شد."
                       Foreground="#795548" FontWeight="Bold" TextAlignment="Center"
                       VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
                    </Border>
                </Grid>
            </ScrollViewer>


        </Grid>
    </Grid>
</Window>
