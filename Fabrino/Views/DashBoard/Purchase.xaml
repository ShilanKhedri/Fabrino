<Window x:Class="Fabrino.Views.DashBoard.Purchase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="خرید"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Height="600" Width="1000"
        Background="#FFEFEF"
        FlowDirection="RightToLeft"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F1F1F1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F48672"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="#DADADA"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Grid.Column="0" Background="#F48672" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="10">
                <!-- پروفایل -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                    <Ellipse Width="50" Height="50">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="Assets/user.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="علی احمدی" Foreground="White" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="صاحب" Foreground="White" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- دکمه‌ها -->
                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/dashboard.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="داشبورد" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/290137_clipboard_document_file_list_report_icon.png" Width="28" Height="30" Margin="0,0,5,0"/>
                        <TextBlock Text="گزارش" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/checklists.png" Width="39" Height="45" Margin="0,0,5,0"/>
                        <TextBlock Text="موجودی" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- دکمه خرید با استایل فعال -->
                <Button Style="{StaticResource ActiveMenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/cart.png" Width="31" Height="29" Margin="0,0,5,0"/>
                        <TextBlock Text="خرید" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/2849830_multimedia_options_setting_settings_gear_icon.png" Width="33" Height="27" Margin="0,0,5,0"/>
                        <TextBlock Text="تنظیمات" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- خروج -->
            <StackPanel Grid.Row="1" Margin="10">
                <Button Content="خروج" Style="{StaticResource MenuButtonStyle}" Foreground="White" Background="#D94C32" Click="Button_Click"/>
            </StackPanel>
        </Grid>
 <Grid Grid.Column="1" Margin="20">
            <StackPanel>
                <!-- سرچ + مرتب‌سازی + فیلتر -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Right" >
                    <!-- جستجو -->
                    <TextBox x:Name="SearchBox"
                     Width="200"
                     Text="جستجو..."
                     Foreground="Gray"
                     GotFocus="SearchBox_GotFocus"
                     LostFocus="SearchBox_LostFocus"
                     Padding="8"
                     FontSize="14"
                     BorderBrush="#CCC" BorderThickness="1" Background="White"/>

                    <!-- مرتب‌سازی -->
                    <ComboBox x:Name="SortComboBox"
                      Width="167"
                      Padding="5"
                      FontSize="14"
                      SelectedIndex="0">
                        <ComboBoxItem Content="مرتب‌سازی بر اساس نام"/>
                        <ComboBoxItem Content="مرتب‌سازی بر اساس شماره تماس"/>
                        <ComboBoxItem Content="مرتب‌سازی بر اساس ایمیل"/>
                    </ComboBox>

                    <!-- فیلتر -->
                    <ComboBox x:Name="FilterComboBox"
                      Width="150"
                      Padding="5"
                      FontSize="14"
                      SelectedIndex="0">
                        <ComboBoxItem Content="همه تامین‌کننده‌ها"/>
                        <ComboBoxItem Content="داخلی"/>
                        <ComboBoxItem Content="خارجی"/>
                    </ComboBox>
                </StackPanel>

                <!-- جدول -->
                <DataGrid x:Name="SupplierGrid"
                  AutoGenerateColumns="False" HeadersVisibility="Column"
                  CanUserAddRows="False"
                  Margin="0,10,0,0"
                  BorderBrush="#DDD" BorderThickness="1"
                  FontSize="14">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="نام تامین‌کننده" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="شماره تماس" Binding="{Binding Phone}" Width="*"/>
                        <DataGridTextColumn Header="ایمیل" Binding="{Binding Email}" Width="*"/>
                        <DataGridTextColumn Header="نوع" Binding="{Binding Type}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
