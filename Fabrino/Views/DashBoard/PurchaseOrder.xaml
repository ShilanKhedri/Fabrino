<Window x:Class="Fabrino.Views.DashBoard.PurchaseOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ثبت سفارش جدید"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Height="600" Width="1000"
        Background="#FFEFEF"
        FlowDirection="RightToLeft"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F1F1F1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F48672"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="#DADADA"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- سایدبار (همان‌طور که بود) -->
        <Grid Grid.Column="0" Background="#F48672" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="10">
                <!-- پروفایل -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                    <Ellipse Width="50" Height="50">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="Assets/user.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="علی احمدی" Foreground="White" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="صاحب" Foreground="White" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- دکمه‌ها -->
                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/dashboard.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="داشبورد" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/290137_clipboard_document_file_list_report_icon.png" Width="28" Height="30" Margin="0,0,5,0"/>
                        <TextBlock Text="گزارش" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/checklists.png" Width="39" Height="45" Margin="0,0,5,0"/>
                        <TextBlock Text="موجودی" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- دکمه خرید با استایل فعال -->
                <Button Style="{StaticResource ActiveMenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/cart.png" Width="31" Height="29" Margin="0,0,5,0"/>
                        <TextBlock Text="خرید" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Assets/2849830_multimedia_options_setting_settings_gear_icon.png" Width="33" Height="27" Margin="0,0,5,0"/>
                        <TextBlock Text="تنظیمات" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- خروج -->
            <StackPanel Grid.Row="1" Margin="10">
                <Button Content="خروج" Style="{StaticResource MenuButtonStyle}" Foreground="White" Background="#D94C32"/>
            </StackPanel>
        </Grid>

        <!-- محتوای جدید: فرم ثبت سفارش -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- عنوان صفحه -->
            <TextBlock Grid.Row="0" 
                       Text="ثبت سفارش جدید" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Right"/>

            <!-- فرم ثبت سفارش -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- اطلاعات سفارش (سمت راست) -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="اطلاعات سفارش" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- فیلدهای ورودی -->
                    <Label Content="نام کالا:"/>
                    <TextBox x:Name="ProductName" FontSize="14" Margin="0,0,0,10" Height="30"/>

                    <Label Content="تعداد:"/>
                    <TextBox x:Name="Quantity" FontSize="14" Margin="0,0,0,10" Height="30"/>

                    <Label Content="قیمت واحد:"/>
                    <TextBox x:Name="UnitPrice" FontSize="14" Margin="0,0,0,10" Height="30"/>

                    <Label Content="تاریخ تحویل:"/>
                    <DatePicker x:Name="DeliveryDate" FontSize="14" Margin="0,0,0,10" Height="30"/>
                </StackPanel>

                <!-- اطلاعات تامین‌کننده (سمت چپ) -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="اطلاعات تامین‌کننده" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- فیلدهای ورودی -->
                    <Label Content="نام تامین‌کننده:"/>
                    <ComboBox x:Name="SupplierName" FontSize="14" Margin="0,0,0,10" Height="30"/>

                    <Label Content="شماره تماس:"/>
                    <TextBox x:Name="SupplierPhone" FontSize="14" Margin="0,0,0,10" Height="30"/>

                    <Label Content="آدرس:"/>
                    <TextBox x:Name="SupplierAddress" FontSize="14" Margin="0,0,0,10" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>
            </Grid>

            <!-- دکمه ثبت سفارش -->
            <Button Grid.Row="1" 
                    Content="ثبت سفارش" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Bottom"
                    Width="150" 
                    Height="40"
                    Margin="0,0,0,20"
                    Background="#F48672"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>