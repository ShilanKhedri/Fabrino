<Window x:Class="Fabrino.Views.ForgotPasswordStep3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="بازیابی رمز عبور - مرحله ۳" Height="300" Width="400">
    <Grid Background="#FFF6F6F6">
        <StackPanel Margin="30" VerticalAlignment="Center">
            <PasswordBox x:Name="NewPasswordBox" Height="35" Margin="0,10,0,10"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="35" Margin="0,10,0,10"/>
            <Button Content="تغییر رمز" Click="ResetButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
