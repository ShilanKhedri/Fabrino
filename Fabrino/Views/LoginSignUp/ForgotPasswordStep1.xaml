<Window x:Class="Fabrino.Views.ForgotPasswordStep1"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="بازیابی رمز عبور - مرحله ۱" Height="425" Width="527">
    <Grid Background="#FFF6F6F6" >
        <Border BorderBrush="Black" BorderThickness="0" Background="#FFEDE1" CornerRadius="15" HorizontalAlignment="Center" Height="218" VerticalAlignment="Center" Width="292">
            <StackPanel HorizontalAlignment="Center" Height="218" VerticalAlignment="Center" Width="292">
                <TextBlock Height="42" TextWrapping="Wrap" Text="نام کاربری خود را وارد کنید" Width="194" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,17,0,0" TextAlignment="Center" FontFamily="Arial" FontWeight="Bold" FontSize="18" Foreground="#FFF47458"/>
                <TextBox x:Name="UsernameTextBox" GotFocus="RemoveText" LostFocus="AddText" Height="38" Text="نام کاربری" Width="204" Margin="0,21,0,0" HorizontalAlignment="Center" TextAlignment="Right" Background="#FFF6EEEE" FontFamily="Arial" FontSize="22" Foreground="#FF9F9F9F"/>
                <Button  Content="ادامه" Height="44" Width="90" Margin="0,25,0,0" Background="#FFF47458" Foreground="White" FontFamily="Arial" FontSize="18" FontWeight="Bold" BorderThickness="0,0,0,0" Click="Button_Click"/>
            </StackPanel>

        </Border>


    </Grid>
</Window>
