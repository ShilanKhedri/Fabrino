<Window x:Class="Fabrino.Views.ForgotPasswordStep2"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="بازیابی رمز عبور - مرحله ۱" Height="425" Width="527">
    <Grid Background="#FFF6F6F6" >
        <Border BorderBrush="Black" BorderThickness="0" Background="#FFEDE1" CornerRadius="15" HorizontalAlignment="Center" Height="326" VerticalAlignment="Center" Width="292">
            <StackPanel HorizontalAlignment="Center" Height="306" VerticalAlignment="Center" Width="292">
                <TextBlock Height="42" TextWrapping="Wrap" Width="194" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,17,0,0" TextAlignment="Center" FontFamily="Arial" FontWeight="Bold" FontSize="18" Foreground="#FFF47458"><Run FlowDirection="RightToLeft" Language="fa-ir" Text="پاسخ سوال امنیتی را وارد کنید"/></TextBlock>
                <TextBlock x:Name="AnswerTextBox" Height="33" TextWrapping="Wrap" Width="202" TextAlignment="Center" Margin="0,8,0,0" FontFamily="Arial" FontSize="18" Background="#FFDFD7D7" Foreground="#FF464646"/>

                <TextBox x:Name="QuestionTextBox" GotFocus="RemoveText" LostFocus="AddText" Height="38" Text="پاسخ" Width="204" Margin="0,21,0,0" HorizontalAlignment="Center" TextAlignment="Right" Background="#FFF6EEEE" FontFamily="Arial" FontSize="22" Foreground="#FF9F9F9F"/>
                <Button  Content="بررسی" Height="44" Width="90" Margin="0,25,0,0" Background="#FFF47458" Foreground="White" FontFamily="Arial" FontSize="18" FontWeight="Bold" BorderThickness="0,0,0,0" Click="Button_Click"/>
            </StackPanel>

        </Border>


    </Grid>
</Window>
