<Window x:Class="Fabrino.Views.SignUpWindow"
        WindowState="Maximized"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fabrino.Views"
        mc:Ignorable="d"
        Title="SignUp Page" Height="1080" Width="1920">
    <Window.Resources>
        <!-- استایل برای دکمه Outline -->
        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#F47458"/>
            <Setter Property="BorderBrush" Value="#F47458"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF47458"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="#FFF6F6F6">
        <Border BorderBrush="White" BorderThickness="0" HorizontalAlignment="Center" Height="700" VerticalAlignment="Center" Width="600"
                Background="#FFEDE1" CornerRadius="15">
            
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="450" Height="633">
                <TextBlock Text="ثبت نام مالک" 
                           Foreground="#F47458" 
                           FontFamily="Arial" 
                           FontSize="32" 
                           TextAlignment="Center" 
                           Margin="0,20,0,30" 
                           HorizontalAlignment="Center"/>

                <!-- نام کاربری -->
                <TextBox x:Name="UsernameTextBox" 
                         Margin="0,15,0,15" 
                         Height="35" 
                         FontFamily="Arial" 
                         FontSize="16" 
                         Foreground="Gray" 
                         Text="نام کاربری" 
                         GotFocus="RemoveText" 
                         LostFocus="AddText" 
                         TextAlignment="Right"
                         MaxLength="15"/>

                <!-- نام کامل -->
                <TextBox x:Name="FullNameTextBox" 
                         Margin="0,15,0,15" 
                         Height="35" 
                         FontFamily="Arial" 
                         FontSize="16" 
                         Foreground="Gray" 
                         Text="نام کامل" 
                         GotFocus="RemoveText" 
                         LostFocus="AddText" 
                         TextAlignment="Right"
                         MaxLength="18"/>

                <!-- رمز عبور -->
                <Grid Margin="0,15,0,15">
                    <PasswordBox x:Name="PasswordBox" 
                                 Height="35" 
                                 FontFamily="Arial" 
                                 FontSize="16" 
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 MaxLength="8"/>
                    <TextBlock x:Name="PasswordPlaceholder" 
                               Text="رمز عبور" 
                               FontFamily="Arial" 
                               FontSize="16" 
                               Foreground="Gray" 
                               IsHitTestVisible="False" 
                               VerticalAlignment="Center" 
                               Margin="5,0,0,0" TextAlignment="Right" />
                </Grid>

                <!-- تکرار رمز عبور -->
                <Grid Margin="0,15,0,15">
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                 Height="35" 
                                 FontFamily="Arial" 
                                 FontSize="16" 
                                 PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                                 MaxLength="8"/>
                    <TextBlock x:Name="ConfirmPasswordPlaceholder" 
                               Text="تکرار رمز عبور" 
                               FontFamily="Arial" 
                               FontSize="16" 
                               Foreground="Gray" 
                               IsHitTestVisible="False" 
                               VerticalAlignment="Center" 
                               Margin="5,0,0,0" TextAlignment="Right"/>
                </Grid>

                <!-- سوال امنیتی -->
                <ComboBox x:Name="SecurityQuestionComboBox" 
                          Margin="0,15,0,15" 
                          Height="35" 
                          FontFamily="Arial" 
                          FontSize="16" 
                          Foreground="Gray">
                    <ComboBoxItem Content="نام اولین ماشینتان چیست؟"/>
                    <ComboBoxItem Content="نام شهر محل تولدتان چیست؟"/>
                    <ComboBoxItem Content="نام معلم محبوب دوران دبستانتان چیست؟"/>
                    <ComboBoxItem Content="نام بهترین دوست دوران مدرسه‌تان چیست؟"/>
                </ComboBox>

                <!-- پاسخ سوال امنیتی -->
                <TextBox x:Name="SecurityAnswerTextBox" 
                         Margin="0,15,0,15" 
                         Height="35" 
                         FontFamily="Arial" 
                         FontSize="16" 
                         Foreground="Gray" 
                         Text="پاسخ سوال امنیتی" 
                         GotFocus="RemoveText" 
                         LostFocus="AddText" 
                         TextAlignment="Right"
                         MaxLength="20"/>

                <!-- دکمه‌ها -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button x:Name="BackButton" 
                            Content="بازگشت" 
                            Style="{StaticResource OutlineButtonStyle}" 
                            Click="BackButton_Click" Margin="0,0,33,0"/>
                    <Button x:Name="RegisterButton" 
                            Content="ثبت‌ نام" 
                            Background="#F47458" 
                            Foreground="White" 
                            FontFamily="Arial" 
                            FontSize="18" 
                            Height="40" 
                            Width="120" 
                            Margin="0,0,10,0" 
                            Click="RegisterButton_Click" BorderThickness="0,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>