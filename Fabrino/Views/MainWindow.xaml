<Window 
        x:Class="Fabrino.MainWindow"
        WindowState="Maximized"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fabrino"
        mc:Ignorable="d"
        Title="Login Page" Height="1080" Width="1920"
        FlowDirection="LeftToRight">
    <Grid FlowDirection="LeftToRight">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- پس‌زمینه ستون دوم -->
        <Border Grid.Column="1" Background="#FFEDE1"/>

        <!-- تصویر در ستون دوم -->
        <Image Source="/fabric.png" Grid.Column="1" 
               HorizontalAlignment="Right" VerticalAlignment="Center" 
               Height="383" Width="504"/>

        <!-- متن "فابرینو" -->
        <TextBlock Grid.Column="0" 
                   Text="فابرینو" 
                   Foreground="#F47458" FontFamily="Arial" FontSize="64" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" 
                   Margin="0,50,0,0"/>

        <!-- متن "ورود به حساب کاربری" -->

        <!-- Border شامل TextBoxها، دکمه و لینک‌ها -->
        <Border Grid.Column="0" 
                BorderBrush="Black" BorderThickness="0" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Width="395" Height="514" 
                Background="#FFEDE1" CornerRadius="15">
            <StackPanel>
                <!-- TextBox برای نام کاربری -->
                <!-- متن "ورود به حساب کاربری" -->
                <TextBlock 
                   Text="ورود به حساب کاربری" 
                   Foreground="#F47458" FontFamily="Arial" FontSize="32" TextAlignment="Right" Margin="0,15,15,0" 
                   />

                <!-- TextBox برای نام کاربری -->
                <TextBox x:Name="UsernameTextBox"
                         GotFocus="RemoveText" 
                         LostFocus="AddText"
                         Text="نام کاربری" 
                         FontFamily="Arial" FontSize="32" 
                         TextAlignment="Right" Foreground="#9F9F9F" 
                         BorderThickness="1" Background="#FFFAF4" 
                         Width="317" Height="56" 
                         Margin="0,76,0,20" 
                         HorizontalAlignment="Center"/>

                <!-- TextBox برای رمز عبور -->
                <PasswordBox x:Name="PasswordTextBox" 
                             GotFocus="RemovePassword" 
             LostFocus="AddPassword"
             Password="رمز عبور" 
             FontFamily="Arial" FontSize="32" 
             Foreground="#9F9F9F" 
             BorderThickness="1" Background="#FFFAF4" 
             Width="317" Height="56" 
             Margin="0,0,0,15" 
             HorizontalAlignment="Center"/>
                <TextBlock TextAlignment="Right" Margin="0,10,30,40" ><Hyperlink Foreground="#F47458" FontFamily="Arial" FontSize="16"><Run Text="رمز عبور خود را فراموش کرده‌اید؟"/></Hyperlink></TextBlock>
                <Button Content="ورود" 
                        FontFamily="Arial" FontSize="32" 
                        Foreground="White" Background="#F47458" 
                        BorderThickness="0" 
                        Width="317" Height="56" 
                        Click="LoginButton_Click"/>
                <TextBlock TextAlignment="Right" Margin="0,40,30,40"><Hyperlink Foreground="#F47458" FontFamily="Arial" FontSize="16"><Run Text="حساب کاربری ندارید؟ ثبت نام در فابرینو" MouseLeftButtonDown="GoToRegister_Click"/></Hyperlink></TextBlock>

                <!-- دکمه ورود -->

                <!-- لینک "رمز عبور خود را فراموش کرده‌اید؟" -->

                <!-- لینک "حساب کاربری ندارید؟ ثبت نام در فابرینو" -->
            </StackPanel>
        </Border>
    </Grid>
</Window>