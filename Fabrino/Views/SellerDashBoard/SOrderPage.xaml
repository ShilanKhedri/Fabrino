<Page x:Class="Fabrino.Views.SellerDashBoard.SOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="پنل فروشنده"
      Background="#FFF5F5F5"
      FlowDirection="RightToLeft">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- لیست سفارشات -->
        <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="15" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="شناسه سفارش‌ها" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox x:Name="OrderList" Height="400">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="0,5" Padding="10">
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="{Binding}" FontWeight="Bold" Width="80"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,0,0">
                                        <Button Content="ویرایش" Background="#FFC107" Margin="0,0,5,0"/>
                                        <Button Content="حذف" Background="#F44336" Foreground="White"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- خط نقطه‌چین جداکننده -->
        <GridSplitter Grid.Column="1" Width="10" HorizontalAlignment="Center">
            <GridSplitter.Template>
                <ControlTemplate>
                    <Rectangle Fill="Transparent" Stroke="Gray" StrokeDashArray="2 2" Width="1"/>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <!-- فرم ثبت سفارش -->
        <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="سفارش جدید" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="شناسه سفارش:"/>
                <TextBox x:Name="OrderIdTextBox" Margin="0,5"/>

                <TextBlock Text="نام مشتری:"/>
                <TextBox x:Name="NameTextBox" Margin="0,5"/>

                <TextBlock Text="شماره تلفن:"/>
                <TextBox x:Name="PhoneTextBox" Margin="0,5"/>

                <TextBlock Text="آدرس:"/>
                <TextBox x:Name="AddressTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5"/>

                <TextBlock Text="تعداد اقلام:"/>
                <TextBox x:Name="ItemCountTextBox" Margin="0,5"/>

                <TextBlock Text="اقلام:"/>
                <TextBox x:Name="ItemsTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5"/>

                <TextBlock Text="قیمت کل:"/>
                <TextBox x:Name="TotalPriceTextBox" Margin="0,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Right">
                    <Button Content="تایید" Width="100" Margin="5" Click="ConfirmButton_Click"/>
                    <Button Content="صدور فاکتور" Width="120" Margin="5" Click="GenerateInvoiceButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
