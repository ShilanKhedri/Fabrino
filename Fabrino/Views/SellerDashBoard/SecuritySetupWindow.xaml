<Window x:Class="Fabrino.Views.SecuritySetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تنظیم سؤال امنیتی"
        Height="270" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FAFAFA"
        WindowStyle="None"
        AllowsTransparency="True"
        FlowDirection="RightToLeft">

    <Border Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20" >

        <StackPanel>
            <TextBlock Text="تنظیم سؤال امنیتی"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#333"
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="سؤال امنیتی:" Margin="0,0,0,5" Foreground="#555"/>
            <ComboBox x:Name="QuestionCombo" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="نام اولین ماشینتان چیست؟"/>
                <ComboBoxItem Content="نام شهر محل تولدتان چیست؟"/>
                <ComboBoxItem Content="نام معلم محبوب دوران دبستانتان چیست؟"/>
                <ComboBoxItem Content="نام بهترین دوست دوران مدرسه‌تان چیست؟"/>
            </ComboBox>

            <TextBlock Text="پاسخ:" Margin="0,0,0,5" Foreground="#555"/>
            <TextBox x:Name="AnswerBox"
                     Height="30"
                     Padding="5"
                     BorderBrush="#CCC"
                     BorderThickness="1"
                     Background="#FFF"
                     Margin="0,0,0,15"/>

            <Button Content="ذخیره"
                    Width="120"
                    Height="35"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    Click="Save_Click"/>
        </StackPanel>
    </Border>
</Window>
