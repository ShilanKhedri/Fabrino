[32m+[m[32m﻿using Fabrino.Models;[m
[32m+[m[32musing System;[m
[32m+[m[32musing System.Collections.Generic;[m
[32m+[m[32musing System.Linq;[m
[32m+[m[32musing System.Text;[m
[32m+[m[32musing System.Threading.Tasks;[m
[32m+[m[32musing Microsoft.Data.SqlClient;[m
[32m+[m[32musing System.Configuration;[m
[32m+[m
[32m+[m[32mnamespace Fabrino.Controllers[m
[32m+[m[32m{[m
[32m+[m[32m    class AuthController[m
[32m+[m[32m    {[m
[32m+[m[32m        private string connectionString = ConfigurationManager.ConnectionStrings["FabrinoConnection"].ConnectionString;[m
[32m+[m
[32m+[m[32m        public bool IsValidUser(UserModel user)[m
[32m+[m[32m        {[m
[32m+[m[32m            bool isValid = false;[m
[32m+[m
[32m+[m[32m            using (SqlConnection conn = new SqlConnection(connectionString))[m
[32m+[m[32m            {[m
[32m+[m[32m                conn.Open();[m
[32m+[m[32m                string query = "SELECT COUNT(*) FROM users WHERE username = @username AND password_hash = @password";[m
[32m+[m[32m                using (SqlCommand cmd = new SqlCommand(query, conn))[m
[32m+[m[32m                {[m
[32m+[m[32m                    cmd.Parameters.AddWithValue("@username", user.username);[m
[32m+[m[32m                    cmd.Parameters.AddWithValue("@password", user.password_hash);[m
[32m+[m
[32m+[m[32m                    int count = Convert.ToInt32(cmd.ExecuteScalar());[m
[32m+[m[32m                    isValid = count > 0;[m
[32m+[m[32m                }[m
[32m+[m[32m            }[m
[32m+[m
[32m+[m[32m            return isValid;[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m
[32m+[m[32m}[m
